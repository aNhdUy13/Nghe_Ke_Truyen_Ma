<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_setting"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/app_background"
    tools:context=".ui.setting.SettingFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_nativeAdsSetting"
                    android:visibility="gone"
                    app:cardCornerRadius="15dp"
                    android:padding="15dp"
                    android:backgroundTint="#1C1C1C"
                    android:layout_marginTop="10dp"
                    android:layout_width="350dp"
                    android:layout_height="110dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_nativeAdsSetting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvShareApp"
                    app:cardCornerRadius="15dp"
                    android:padding="10dp"
                    android:backgroundTint="#1C1C1C"
                    android:layout_marginTop="10dp"
                    android:layout_width="350dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7">
                            <ImageView
                                android:padding="15dp"
                                android:src="@drawable/share"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3">
                            <TextView
                                android:text="Chia Sẻ Ứng Dụng"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_goToPremium"
                    android:visibility="gone"
                    app:cardCornerRadius="15dp"
                    android:padding="10dp"
                    android:backgroundTint="#1C1C1C"
                    android:layout_marginTop="10dp"
                    android:layout_width="350dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7">
                            <ImageView
                                android:padding="15dp"
                                android:src="@drawable/ic_premium"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3">
                            <TextView
                                android:text="Tính Năng Nâng Cao"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvGetCoin"
                    app:cardCornerRadius="15dp"
                    android:padding="10dp"
                    android:backgroundTint="#1C1C1C"
                    android:layout_marginTop="10dp"
                    android:layout_width="350dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7">
                            <ImageView
                                android:padding="15dp"
                                android:src="@drawable/money"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3">
                            <TextView
                                android:text="Kiếm Xu"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</RelativeLayout>