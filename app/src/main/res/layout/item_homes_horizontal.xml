<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ll_item_homeHorizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content">
    <ImageView
        android:elevation="5dp"
        android:layout_marginLeft="200dp"
        android:layout_gravity="left"
        android:src="@drawable/ic_new"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <LinearLayout
        android:background="@drawable/shape_horizontal_color"
        android:weightSum="2"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="240dp"
        android:layout_height="140dp">
        <LinearLayout
            android:layout_weight="1.5"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/img_itemHomeHorizontal"
                android:layout_width="120dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/txt_ShowStoriesNameHorizontal"
                android:textColor="@color/white"

                android:gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Here is the Ghost Story title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>