<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.premium.PremiumFunction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:background="#FFC107"
            android:layout_weight="0.7">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="0.4">
                <ImageView
                    android:id="@+id/img_Back"
                    android:src="@drawable/ic_left_arrow"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="1.75">

                <TextView
                    android:gravity="center|left"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="Tính Năng Nâng Cao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:weightSum="2"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:layout_weight="0.75">



                <LinearLayout
                    android:layout_weight="1.1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt_premium_xu"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:gravity="center|right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>

                <LinearLayout
                    android:layout_weight="0.6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@mipmap/money"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.4"
            android:orientation="horizontal">
<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:id="@+id/rcv_premiumFunction"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"/>-->

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_bd1"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="310dp"
                        android:layout_height="430dp">
                        <ImageView
                            android:id="@+id/bd_1"
                            android:background="@mipmap/bd_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                    </androidx.cardview.widget.CardView>

<!--                    <androidx.cardview.widget.CardView-->
<!--                        android:id="@+id/cv_bd2"-->
<!--                        app:cardCornerRadius="10dp"-->
<!--                        android:layout_marginLeft="20dp"-->
<!--                        android:layout_width="310dp"-->
<!--                        android:layout_height="430dp">-->
<!--                        <ImageView-->
<!--                            android:id="@+id/bd_2"-->
<!--                            android:background="@mipmap/bd_2"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="match_parent"-->
<!--                            />-->
<!--                    </androidx.cardview.widget.CardView>-->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_bd3"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="310dp"
                        android:layout_height="430dp">
                        <ImageView
                            android:id="@+id/bd_3"
                            android:background="@mipmap/bd_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_bd4"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="310dp"
                        android:layout_height="430dp">
                        <ImageView
                            android:id="@+id/bd_4"
                            android:background="@mipmap/bd_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_bd5"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="310dp"
                        android:layout_height="430dp">
                        <ImageView
                            android:id="@+id/bd_5"
                            android:background="@mipmap/bd_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>